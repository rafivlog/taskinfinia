<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Input Field</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        h2 {
            margin-left: 41%;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            border: none;
            border-radius: 5px;
            background-color: #007bff; /* Default button color */
            color: #fff; /* Default text color */
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #0056b3; /* Button color on hover */
            }


        /* table css */
        table {
            width: 80%;
            border-collapse: separate;
            border-spacing: 0 10px; /* Adjust the spacing between rows as needed */
            margin-left: 10%;
            margin-top: 3%;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <div class="container">
        <form>
            <div class="form-group">
                <label for="department">Department:</label>
                <input id="insertat" hidden>
                @* <input id="dept_id" hidden> *@
                <input type="text" id="deptname" name="deptname" placeholder="Enter Department">
            </div>
            <input class="btn" type="button" value="Save" onclick="Submitdepartment()">
        </form>
    </div>

    <h2>Show All Department</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Department Name</th>
                <th>InsertAT</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.department.Count; i++)
            {
                <tr>
                    <td style="text-align:center">@(i + 1)</td>
                    <td style="text-align:center">@ViewBag.department[i].deptname</td>
                    <td style="text-align:center">@ViewBag.department[i].insertat</td>
                    <td>
                        <button type="button" class=" btn-danger">Edit</button>
                        <button type="button" class=" btn-danger">Delete</button>
                    </td>


                 
                </tr>
            }
        </tbody>
    </table>
</body>
</html>



<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
  


    function Submitdepartment() {
        var formData = new FormData();
        formData.append('deptname', $('#deptname').val());
        formData.append('insertat', $('#insertat').val());

        $.ajax({
            type: 'POST',
            url: '/Hrm/Department/Save',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
                $('#deptname').val('');
                $('#insertat').val('');
                //$('dept_id').val('');

                if (result != null) {
                    window.location.reload();
                }

            },
            error: function () {

            }

        });
    }


</script>