<title>@ViewData["Title"] Category</title>
@* @{
    Layout = "_Layout";
} *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Input Field</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        h2 {
            margin-left: 41%;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            border: none;
            border-radius: 5px;
            background-color: #007bff; /* Default button color */
            color: #fff; /* Default text color */
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #0056b3; /* Button color on hover */
            }


        /* table css */
        table {
            width: 80%;
            border-collapse: separate;
            border-spacing: 0 10px; /* Adjust the spacing between rows as needed */
            margin-left: 10%;
            margin-top: 3%;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        /* modal */

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
            text-align: center;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

    </style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>
<body>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Please Add Category</p>
        </div>
    </div>
    @* modal *@
    <div class="container">
        <form>
            <div class="form-group">
                <input id="InsertAT" hidden>
                <label for="category">Category:</label>
                <input type="text" id="catname" name="catname" placeholder="Enter category">
            </div>
            <button class="btn" type="button" onclick="Submitcategory()">
                <i class="fas fa-save"></i>
            </button>
            <input class="btn" type="button" value="AddItem" onclick="Additemfunction()">
        </form>
    </div>

    <h2>Show All Category</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>InsertAT</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < ViewBag.category.Count; i++)
            {
                <tr>
                    <td style="text-align:center">@(i + 1)</td>
                    <td style="text-align:center">@ViewBag.category[i].catname</td>
                    <td style="text-align:center">@ViewBag.category[i].InsertAT.ToString("yyyy-MM-dd")</td>

                    <td style="text-align:center">
                        <button>
                            <a style="text-decoration:none ; color:black" href="@Url.Action("Edit","Category",new {cat_id = @ViewBag.category[i].cat_id})" class="btn btn-success">
                                <i class="fas fa-edit"></i>
                            </a>
                        </button>
                        <button type="button" class="btn btn-danger" onclick="deleteCategory(@ViewBag.category[i].cat_id)">
                            <i class="fa fa-trash"></i>
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>



<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    
    function Submitcategory() {

        var catnameValue = $('#catname').val()[0];
        console.log(catnameValue);
        var symbolRegex = /[^a-zA-Z]/;
        if (symbolRegex.test(catnameValue)) {
            console.log("The first character of catname is a symbol.");
        }else {
            var formData = new FormData();
            formData.append('catname', $('#catname').val());
            formData.append('InsertAT', $('#InsertAT').val());
        }
        $.ajax({
            type: 'POST',
            url: '/Stock/Category/Save',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
                $('#catname').val('');
                $('#InsertAT').val('');

                if (result === null) {
                    alert("Plz Add categeory");
                }

                else {
                    window.location.reload();
                }

            },
            error: function () {

            }

        });
    }

    function deleteCategory(cat_id) {
       debugger
       if (confirm("Are you sure you want to delete this entry?")) {
            $.ajax({
                url: '/Stock/Category/Delete/'+cat_id,
                type: 'POST', 
                success: function (result) {
                    if (result != null) {
                        window.location.reload();
                    }
                    
                },
                error: function () {

                }
            });
        }
    }

    function Additemfunction() {
        window.location.href = '/Stock/Item/Additem';
    }

</script>